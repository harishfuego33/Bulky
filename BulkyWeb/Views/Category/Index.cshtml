@model List<Category>
@{
    <div class="container">
        <div class ="row pt-5">
            <div class="col-6">
                <h2 class="align-content-center">Category List</h2>
            </div> 
            <div class="col-6 text-end">
                <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                <i class="bi bi-plus-circle"></i>
                Create New Category
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr >
                    <th>Category Name</th>
                    <th>Display Order</th>
                </tr>
            </thead>
             <tbody>
                 @foreach(var item in Model.OrderBy(o=>o.DisplayOrder)) // which displays in desending order
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.DisplayOrder</td>
                        </tr>
                    }
             </tbody>
        </table>
    </div>

}
 